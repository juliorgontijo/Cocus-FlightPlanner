@model ErrorViewModel
@{
    ViewData["Title"] = "Oops!";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-circle fa-4x text-danger mb-3"></i>
                    <h1 class="display-5 text-danger">Something went wrong</h1>
                    <p class="lead mt-3 mb-4">
                        We're sorry, but an unexpected error occurred.<br />
                        Please try again or contact support if the problem continues.
                    </p>

                    <div class="d-flex justify-content-center gap-3">
                        <a href="javascript:location.reload()" class="btn btn-outline-primary">
                            <i class="fas fa-redo-alt me-1"></i> Try Again
                        </a>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home me-1"></i> Go to Homepage
                        </a>
                    </div>

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted mt-4 mb-0" style="font-size: 0.85rem;">
                            Request ID: <code>@Model.RequestId</code>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
