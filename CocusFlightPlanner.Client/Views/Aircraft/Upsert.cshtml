@model CocusFlightPlanner.Common.Commands.AircraftTypeCommand

@section Toolbar {
    <div>
        <span>Create new aircraft type</span>
    </div>
}

<form asp-controller="Aircraft" asp-action="Upsert" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row my-3">
        <div class="col-4 form-group">
            <label class="form-label">Name</label>
            <input class="form-control @(ViewData.ModelState["Name"]?.Errors.Count > 0 ? "is-invalid" : "")" type="text" asp-for="Name" id="Name" />
            <span asp-validation-for="Name" class="invalid-feedback"></span>
        </div>
        <div class="col-2 form-group">
            <label class="form-label">Maximum Takeoff Weight (tons)</label>
            <input class="form-control @(ViewData.ModelState["Mtow"]?.Errors.Count > 0 ? "is-invalid" : "")" type="text" asp-for="Mtow" id="Mtow" />
            <span asp-validation-for="Mtow" class="invalid-feedback"></span>
        </div>
        <div class="col-2 form-group">
            <label class="form-label">Cruise Fuel Burn (kg/km)</label>
            <input class="form-control @(ViewData.ModelState["CruiseFuelBurn"]?.Errors.Count > 0 ? "is-invalid" : "")" type="text" asp-for="CruiseFuelBurn" />
            <span asp-validation-for="CruiseFuelBurn" class="invalid-feedback"></span>
        </div>
    </div>
    <div class="d-flex justify-content-start">
        <a class="btn btn-secondary btn-sm me-2" asp-area="" asp-controller="Aircraft" asp-action="Index">Cancel</a>
        <button class="btn btn-primary btn-sm" type="submit">Save</button>
    </div>
</form>
